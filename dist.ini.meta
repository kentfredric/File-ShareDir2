; vim: syntax=dosini
name    = File-ShareDir2
author  = Adam Kennedy <adamk@cpan.org>
license = Perl_5
copyright_holder = Adam Kennedy <adamk@cpan.org>
copyright_year   = 2005

[@Author::KENTNL]
; twitter_extra_hash_tags = 
normal_form       = numify
mantissa          = 6
toolkit           = eumm
toolkit_hardness  = soft
bumpversions      = 1
srcreadme         = pod
;-remove           = Author::KENTNL::RecommendFixes
-remove           = MetaData::BuiltWith
-remove           = MakeMaker
PodWeaver.replacer = replace_with_comment
PodWeaver.post_code_replacer = replace_with_blank

[MakeMaker::Awesome]
default_jobs = 10
delimiter = |
header = | use lib 'inc/File-ShareDir-Install';

[ShareDir]

[Munge::Whitespace]
filename = LICENSE

[RemovePrereqs]
remove = File::ShareDir::Install
;authordep Pod::Weaver::Section::Contributors = 0

;[Prereqs / TestRecommends]
